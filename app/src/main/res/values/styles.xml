<resources>

    <!-- Base application theme. -->


    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--状态栏颜色-->
        <item name="colorPrimaryDark">@color/text_gray</item>
        <!--Toolbar颜色-->
        <item name="colorPrimary">@color/text_gray</item>
        <!--返回键样式-->
        <item name="drawerArrowStyle">@style/AppTheme.DrawerArrowToggle</item>
    </style>
    <style name="AppTheme.DrawerArrowToggle" parent="Base.Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <!-- activity theme. -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="text_style_black_middle" >
        <item name="android:paddingLeft">@dimen/pading_middle</item>
        <item name="android:paddingRight">@dimen/pading_middle</item>
        <item name="android:textSize">@dimen/font_size_middle</item>
        <item name="android:textColor">@color/text_black</item>
    </style>

    <style name="bottom_tab">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:text">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/select_text_color</item>
        <item name="android:padding">@dimen/pading_middle</item>
        <item name="android:button">@null</item>
    </style>


    <style name="news_summary_photo_iv">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">@dimen/pading_middle</item>
        <item name="android:scaleType">fitCenter</item>
    </style>


    <style name="text_black_middle">
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">@dimen/font_size_middle</item>
    </style>

    <style name="text_gray_middle">
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:textSize">@dimen/font_size_middle</item>
    </style>

    <style name="text_orange_middle">
        <item name="android:textColor">@color/text_orange</item>
        <item name="android:textSize">@dimen/font_size_middle</item>
    </style>


</resources>
