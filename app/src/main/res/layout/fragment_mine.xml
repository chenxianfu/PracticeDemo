<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.example.cxf.practicedemo.view.HorizontalselectedView
            android:id="@+id/hsv"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            app:HorizontalselectedViewSeesize="6"
            app:HorizontalselectedViewSelectedTextColor="@color/text_orange"
            app:HorizontalselectedViewSelectedTextSize="14"
            app:HorizontalselectedViewTextColor="@color/text_gray"
            app:HorizontalselectedViewTextSize="12" />


        <com.example.cxf.practicedemo.view.HorizontalSelected2View
            android:id="@+id/scrollPicker"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:scrollbars="none">

            <LinearLayout
                android:id="@android:id/content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center" />

        </com.example.cxf.practicedemo.view.HorizontalSelected2View>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:background="@color/hint_gray" />

        <TextView
            android:id="@+id/tv_viewpager_scroll"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="viewpager"
            android:textColor="@color/text_black" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:background="@color/hint_gray" />


        <ImageView
            android:id="@+id/image_9"
            android:layout_width="match_parent"
            android:background="@drawable/image_no"
            android:layout_height="700dp" />


        <TextView
            android:id="@+id/image_10"
            android:layout_width="match_parent"
            android:background="@drawable/image_no_new"
            android:text="这个是我的一个测试"
            android:layout_height="25dp" />
    </LinearLayout>


</ScrollView>