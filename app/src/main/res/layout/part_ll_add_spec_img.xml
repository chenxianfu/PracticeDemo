<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="88dp"
    android:layout_height="wrap_content"
    android:paddingLeft="4dp"
    android:paddingRight="4dp">

    <ImageView
        android:id="@+id/sdv_p_place_contract"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/add_img"/>

    <ImageView
        android:id="@+id/iv_p_place_contract"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/edit_delete"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tv_p_place_contract_error"
        android:layout_below="@+id/sdv_p_place_contract"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请重新上传"
        android:textColor="@color/red"
        android:visibility="visible" />

</RelativeLayout>